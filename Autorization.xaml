<Window x:Class="Practice.Autorization" ResizeMode="NoResize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="350">
    <Grid Style="{StaticResource BackgroundG}" >
        <Image Source="D:\jobs\Practice2\Practice\Icon\logo.png" Width="30" HorizontalAlignment="Left" Margin="15,20,0,0" VerticalAlignment="Top"/>
        <Label Content="ООО 'ЦВЕТОЧЕК'" Margin="40,10,0,0" Width="110" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel Margin="10">
            <TextBlock Text="Логин" Width="34" Margin="0,20,0,0"/>
            <TextBox x:Name="txtLogin" Width="200" Margin="0,5,0,0"/>
            <TextBlock Text="Пароль"  Width="42" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="0,5,0,0"/>
            <Button Background="White" Content="Войти" Click="Login_Click" Width="60" Margin="0,20,0,0" />
            <Button Background="White" Content="Зарегистрировать флориста" Click="Authorization_Click" Width="170" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>
