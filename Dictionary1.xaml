<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonStyleOk" TargetType="Button">
        <Setter Property="Background" Value="#B5D5CA"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="ButtonStyleCancel" TargetType="Button">
        <Setter Property="Background" Value="#E0A9AF"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="Background" TargetType="Window">
        <Setter Property="Background" Value="#D1EEFC"/>
    </Style>

    <Style x:Key="BackgroundG" TargetType="Grid">
        <Setter Property="Background" Value="#D1EEFC"/>
    </Style>

</ResourceDictionary>